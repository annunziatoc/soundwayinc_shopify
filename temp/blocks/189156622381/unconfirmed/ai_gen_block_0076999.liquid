{% doc %}
  @prompt
    Create a featured products section with 3 product cards. Each card should have an image at the top, followed by the product name, a description area with bullet points for features/what's included, and a "Shop Now" button at the bottom. No price information should be displayed. The layout should be responsive and visually appealing with proper spacing between cards.
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-featured-products-{{ ai_gen_id }} {
    padding: {{ block.settings.section_padding_top }}px 0 {{ block.settings.section_padding_bottom }}px;
    background-color: {{ block.settings.background_color }};
  }

  .ai-featured-products-container-{{ ai_gen_id }} {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .ai-featured-products-header-{{ ai_gen_id }} {
    text-align: center;
    margin-bottom: 40px;
  }

  .ai-featured-products-title-{{ ai_gen_id }} {
    font-family: {{ settings.type_header_font.family }}, {{ settings.type_header_font.fallback_families }};
    font-weight: {{ settings.type_header_font.weight }};
    font-size: {{ block.settings.heading_size }}px;
    color: {{ block.settings.text_color }};
    margin: 0 0 16px;
    line-height: 1.2;
  }

  .ai-featured-products-subtitle-{{ ai_gen_id }} {
    font-family: {{ settings.type_body_font.family }}, {{ settings.type_body_font.fallback_families }};
    font-size: {{ block.settings.subtitle_size }}px;
    color: {{ block.settings.text_color }};
    margin: 0;
    opacity: 0.8;
  }

  .ai-featured-products-grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: {{ block.settings.card_spacing }}px;
    margin-top: 40px;
  }

  .ai-product-card-{{ ai_gen_id }} {
    background-color: {{ block.settings.card_background_color }};
    border-radius: {{ block.settings.card_border_radius }}px;
    overflow: hidden;
    box-shadow: 0 {{ block.settings.card_shadow_vertical }}px {{ block.settings.card_shadow_blur }}px rgba(0, 0, 0, {{ block.settings.card_shadow_opacity | divided_by: 100.0 }});
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    display: flex;
    flex-direction: column;
    height: 100%;
  }

  .ai-product-card-{{ ai_gen_id }}:hover {
    transform: translateY(-4px);
    box-shadow: 0 {{ block.settings.card_shadow_vertical | plus: 4 }}px {{ block.settings.card_shadow_blur | plus: 8 }}px rgba(0, 0, 0, {{ block.settings.card_shadow_opacity | divided_by: 100.0 | plus: 0.1 }});
  }

  .ai-product-card-image-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    height: 250px;
    overflow: hidden;
  }

  .ai-product-card-image-{{ ai_gen_id }} img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .ai-product-card-{{ ai_gen_id }}:hover .ai-product-card-image-{{ ai_gen_id }} img {
    transform: scale(1.05);
  }

  .ai-product-card-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  .ai-product-card-placeholder-{{ ai_gen_id }} svg {
    width: 80px;
    height: 80px;
    opacity: 0.3;
  }

  .ai-product-card-empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 10px;
    left: 50%;
    transform: translateX(-50%);
    font-size: 12px;
    color: #666;
    text-align: center;
    font-style: italic;
  }

  .ai-product-card-content-{{ ai_gen_id }} {
    padding: 24px;
    flex-grow: 1;
    display: flex;
    flex-direction: column;
  }

  .ai-product-card-title-{{ ai_gen_id }} {
    font-family: {{ settings.type_header_font.family }}, {{ settings.type_header_font.fallback_families }};
    font-weight: {{ settings.type_header_font.weight }};
    font-size: {{ block.settings.product_title_size }}px;
    color: {{ block.settings.card_text_color }};
    margin: 0 0 16px;
    line-height: 1.3;
  }

  .ai-product-card-description-{{ ai_gen_id }} {
    flex-grow: 1;
    margin-bottom: 24px;
  }

  .ai-product-card-features-{{ ai_gen_id }} {
    font-family: {{ settings.type_body_font.family }}, {{ settings.type_body_font.fallback_families }};
    font-size: {{ block.settings.feature_text_size }}px;
    color: {{ block.settings.card_text_color }};
    line-height: 1.5;
  }

  .ai-product-card-features-{{ ai_gen_id }} ul {
    margin: 0;
    padding-left: 20px;
  }

  .ai-product-card-features-{{ ai_gen_id }} li {
    margin-bottom: 8px;
  }

  .ai-product-card-features-{{ ai_gen_id }} li:last-child {
    margin-bottom: 0;
  }

  .ai-product-card-button-{{ ai_gen_id }} {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 12px 24px;
    background-color: {{ block.settings.button_color }};
    color: {{ block.settings.button_text_color }};
    text-decoration: none;
    border-radius: {{ settings.buttons_radius }}px;
    font-family: {{ settings.type_body_font.family }}, {{ settings.type_body_font.fallback_families }};
    font-size: {{ block.settings.button_text_size }}px;
    font-weight: 600;
    transition: all 0.3s ease;
    border: {{ settings.buttons_border_thickness }}px solid {{ block.settings.button_color }};
    box-shadow: {{ settings.buttons_shadow_horizontal_offset }}px {{ settings.buttons_shadow_vertical_offset }}px {{ settings.buttons_shadow_blur }}px rgba(0, 0, 0, {{ settings.buttons_shadow_opacity | divided_by: 100.0 }});
  }

  .ai-product-card-button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_color }};
    color: {{ block.settings.button_hover_text_color }};
    border-color: {{ block.settings.button_hover_color }};
    transform: translateY(-1px);
  }

  .ai-product-card-empty-product-{{ ai_gen_id }} {
    text-align: center;
    padding: 40px 24px;
    color: #666;
    font-style: italic;
  }

  @media screen and (max-width: 768px) {
    .ai-featured-products-grid-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
      gap: {{ block.settings.card_spacing | times: 0.75 }}px;
    }

    .ai-featured-products-title-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.8 }}px;
    }

    .ai-product-card-content-{{ ai_gen_id }} {
      padding: 20px;
    }
  }

  @media screen and (max-width: 480px) {
    .ai-featured-products-container-{{ ai_gen_id }} {
      padding: 0 16px;
    }

    .ai-product-card-image-{{ ai_gen_id }} {
      height: 200px;
    }
  }
{% endstyle %}

<div class="ai-featured-products-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-featured-products-container-{{ ai_gen_id }}">
    {% if block.settings.heading != blank or block.settings.subtitle != blank %}
      <div class="ai-featured-products-header-{{ ai_gen_id }}">
        {% if block.settings.heading != blank %}
          <h2 class="ai-featured-products-title-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
        {% endif %}
        {% if block.settings.subtitle != blank %}
          <p class="ai-featured-products-subtitle-{{ ai_gen_id }}">{{ block.settings.subtitle }}</p>
        {% endif %}
      </div>
    {% endif %}

    <div class="ai-featured-products-grid-{{ ai_gen_id }}">
      {% for i in (1..3) %}
        {% liquid
          assign product_key = 'product_' | append: i
          assign features_key = 'product_' | append: i | append: '_features'
          assign product = block.settings[product_key]
          assign features = block.settings[features_key]
        %}

        <div class="ai-product-card-{{ ai_gen_id }}">
          {% if product != blank %}
            <div class="ai-product-card-image-{{ ai_gen_id }}">
              {% if product.featured_image %}
                <img
                  src="{{ product.featured_image | image_url: width: 400 }}"
                  alt="{{ product.featured_image.alt | escape }}"
                  loading="lazy"
                  width="400"
                  height="250"
                >
              {% else %}
                <div class="ai-product-card-placeholder-{{ ai_gen_id }}">
                  {{ 'product-1' | placeholder_svg_tag }}
                </div>
              {% endif %}
            </div>

            <div class="ai-product-card-content-{{ ai_gen_id }}">
              <h3 class="ai-product-card-title-{{ ai_gen_id }}">{{ product.title }}</h3>
              
              {% if features != blank %}
                <div class="ai-product-card-description-{{ ai_gen_id }}">
                  <div class="ai-product-card-features-{{ ai_gen_id }}">
                    {{ features }}
                  </div>
                </div>
              {% endif %}

              <a href="{{ product.url }}" class="ai-product-card-button-{{ ai_gen_id }}">
                {{ block.settings.button_text }}
              </a>
            </div>
          {% else %}
            <div class="ai-product-card-image-{{ ai_gen_id }}">
              <div class="ai-product-card-placeholder-{{ ai_gen_id }}">
                {{ 'product-1' | placeholder_svg_tag }}
                <div class="ai-product-card-empty-state-{{ ai_gen_id }}">
                  Select a product
                </div>
              </div>
            </div>
            <div class="ai-product-card-empty-product-{{ ai_gen_id }}">
              Choose a product for card {{ i }}
            </div>
          {% endif %}
        </div>
      {% endfor %}
    </div>
  </div>
</div>

