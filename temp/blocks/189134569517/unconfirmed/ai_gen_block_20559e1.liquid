{% doc %}
  @prompt
    Modify the existing card section to add a shop button with customizable text that says "includes these items" and remove the price display from the card
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-product-card-{{ ai_gen_id }} {
    position: relative;
    display: flex;
    flex-direction: column;
    height: 100%;
    background-color: rgb(var(--color-background));
    border-radius: {{ settings.card_corner_radius }}px;
    border: {{ settings.card_border_thickness }}px solid rgba(var(--color-foreground), {{ settings.card_border_opacity | divided_by: 100.0 }});
    box-shadow: {{ settings.card_shadow_horizontal_offset }}px {{ settings.card_shadow_vertical_offset }}px {{ settings.card_shadow_blur }}px rgba(var(--color-shadow), {{ settings.card_shadow_opacity | divided_by: 100.0 }});
    overflow: hidden;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .ai-product-card-{{ ai_gen_id }}:hover {
    transform: translateY(-2px);
    box-shadow: {{ settings.card_shadow_horizontal_offset | plus: 2 }}px {{ settings.card_shadow_vertical_offset | plus: 4 }}px {{ settings.card_shadow_blur | plus: 5 }}px rgba(var(--color-shadow), {{ settings.card_shadow_opacity | divided_by: 100.0 | plus: 0.1 }});
  }

  .ai-product-card-image-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    aspect-ratio: {{ block.settings.image_ratio }};
    overflow: hidden;
    background-color: rgba(var(--color-foreground), 0.04);
  }

  .ai-product-card-image-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .ai-product-card-{{ ai_gen_id }}:hover .ai-product-card-image-{{ ai_gen_id }} {
    transform: scale(1.05);
  }

  .ai-product-card-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: rgba(var(--color-foreground), 0.04);
  }

  .ai-product-card-placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.3;
  }

  .ai-product-card-content-{{ ai_gen_id }} {
    padding: {{ block.settings.content_padding }}px;
    flex-grow: 1;
    display: flex;
    flex-direction: column;
    text-align: {{ settings.card_text_alignment }};
  }

  .ai-product-card-title-{{ ai_gen_id }} {
    font-family: var(--font-heading-family);
    font-size: {{ block.settings.title_size }}px;
    font-weight: {{ block.settings.title_weight }};
    color: rgb(var(--color-foreground));
    margin: 0 0 {{ block.settings.content_spacing }}px;
    line-height: 1.3;
  }

  .ai-product-card-description-{{ ai_gen_id }} {
    font-family: var(--font-body-family);
    font-size: {{ block.settings.description_size }}px;
    color: rgba(var(--color-foreground), 0.75);
    margin: 0 0 {{ block.settings.content_spacing }}px;
    line-height: 1.5;
    flex-grow: 1;
  }

  .ai-product-card-button-wrapper-{{ ai_gen_id }} {
    margin-top: auto;
    padding-top: {{ block.settings.content_spacing }}px;
  }

  .ai-product-card-button-{{ ai_gen_id }} {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: {{ block.settings.button_padding_vertical }}px {{ block.settings.button_padding_horizontal }}px;
    background-color: {{ block.settings.button_color }};
    color: {{ block.settings.button_text_color }};
    border: {{ settings.buttons_border_thickness }}px solid {{ block.settings.button_color }};
    border-radius: {{ settings.buttons_radius }}px;
    font-family: var(--font-body-family);
    font-size: {{ block.settings.button_text_size }}px;
    font-weight: 500;
    text-decoration: none;
    cursor: pointer;
    transition: all 0.3s ease;
    box-shadow: {{ settings.buttons_shadow_horizontal_offset }}px {{ settings.buttons_shadow_vertical_offset }}px {{ settings.buttons_shadow_blur }}px rgba(var(--color-shadow), {{ settings.buttons_shadow_opacity | divided_by: 100.0 }});
    width: 100%;
  }

  .ai-product-card-button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_color }};
    color: {{ block.settings.button_hover_text_color }};
    border-color: {{ block.settings.button_hover_color }};
    transform: translateY(-1px);
    box-shadow: {{ settings.buttons_shadow_horizontal_offset | plus: 1 }}px {{ settings.buttons_shadow_vertical_offset | plus: 2 }}px {{ settings.buttons_shadow_blur | plus: 2 }}px rgba(var(--color-shadow), {{ settings.buttons_shadow_opacity | divided_by: 100.0 | plus: 0.1 }});
  }

  .ai-product-card-empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    padding: 8px 16px;
    background-color: rgba(var(--color-background), 0.9);
    border-radius: 4px;
    font-size: 14px;
    color: rgba(var(--color-foreground), 0.6);
    text-align: center;
    pointer-events: none;
  }

  @media screen and (max-width: 749px) {
    .ai-product-card-content-{{ ai_gen_id }} {
      padding: {{ block.settings.content_padding | times: 0.8 }}px;
    }

    .ai-product-card-title-{{ ai_gen_id }} {
      font-size: {{ block.settings.title_size | times: 0.9 }}px;
    }

    .ai-product-card-description-{{ ai_gen_id }} {
      font-size: {{ block.settings.description_size | times: 0.9 }}px;
    }

    .ai-product-card-button-{{ ai_gen_id }} {
      padding: {{ block.settings.button_padding_vertical | times: 0.8 }}px {{ block.settings.button_padding_horizontal | times: 0.8 }}px;
      font-size: {{ block.settings.button_text_size | times: 0.9 }}px;
    }
  }
{% endstyle %}

<div
  class="ai-product-card-{{ ai_gen_id }} color-{{ block.settings.color_scheme }}"
  {{ block.shopify_attributes }}
>
  <div class="ai-product-card-image-wrapper-{{ ai_gen_id }}">
    {% if block.settings.image %}
      <img
        src="{{ block.settings.image | image_url: width: 600 }}"
        alt="{{ block.settings.image.alt | escape }}"
        class="ai-product-card-image-{{ ai_gen_id }}"
        loading="lazy"
        width="{{ block.settings.image.width }}"
        height="{{ block.settings.image.height }}"
      >
    {% else %}
      <div class="ai-product-card-placeholder-{{ ai_gen_id }}">
        {{ 'product-1' | placeholder_svg_tag }}
        <div class="ai-product-card-empty-state-{{ ai_gen_id }}">
          Add an image
        </div>
      </div>
    {% endif %}
  </div>

  <div class="ai-product-card-content-{{ ai_gen_id }}">
    {% if block.settings.title != blank %}
      <h3 class="ai-product-card-title-{{ ai_gen_id }}">
        {{ block.settings.title }}
      </h3>
    {% endif %}

    {% if block.settings.description != blank %}
      <div class="ai-product-card-description-{{ ai_gen_id }}">
        {{ block.settings.description }}
      </div>
    {% endif %}

    {% if block.settings.button_text != blank %}
      <div class="ai-product-card-button-wrapper-{{ ai_gen_id }}">
        <a
          href="{{ block.settings.button_link | default: '#' }}"
          class="ai-product-card-button-{{ ai_gen_id }}"
        >
          {{ block.settings.button_text }}
        </a>
      </div>
    {% endif %}
  </div>
</div>

{% schema %}
{
  "name": "Product card",
  "settings": [
    {
      "type": "header",
      "content": "Image"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "select",
      "id": "image_ratio",
      "label": "Image ratio",
      "options": [
        {
          "value": "1/1",
          "label": "Square (1:1)"
        },
        {
          "value": "4/3",
          "label": "Landscape (4:3)"
        },
        {
          "value": "3/4",
          "label": "Portrait (3:4)"
        },
        {
          "value": "16/9",
          "label": "Wide (16:9)"
        }
      ],
      "default": "4/3"
    },
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Product title"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Add a compelling product description to showcase the key features and benefits."
    },
    {
      "type": "range",
      "id": "title_size",
      "min": 14,
      "max": 32,
      "step": 2,
      "unit": "px",
      "label": "Title size",
      "default": 20
    },
    {
      "type": "select",
      "id": "title_weight",
      "label": "Title weight",
      "options": [
        {
          "value": "400",
          "label": "Normal"
        },
        {
          "value": "500",
          "label": "Medium"
        },
        {
          "value": "600",
          "label": "Semi-bold"
        },
        {
          "value": "700",
          "label": "Bold"
        }
      ],
      "default": "600"
    },
    {
      "type": "range",
      "id": "description_size",
      "min": 12,
      "max": 20,
      "step": 1,
      "unit": "px",
      "label": "Description size",
      "default": 14
    },
    {
      "type": "range",
      "id": "content_padding",
      "min": 12,
      "max": 40,
      "step": 4,
      "unit": "px",
      "label": "Content padding",
      "default": 20
    },
    {
      "type": "range",
      "id": "content_spacing",
      "min": 8,
      "max": 24,
      "step": 2,
      "unit": "px",
      "label": "Content spacing",
      "default": 12
    },
    {
      "type": "header",
      "content": "Button"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button text",
      "default": "Includes these items"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button link"
    },
    {
      "type": "color",
      "id": "button_color",
      "label": "Button color",
      "default": "#103948"
    },
    {
      "type": "color",
      "id": "button_text_color",
      "label": "Button text color",
      "default": "#fcfcfc"
    },
    {
      "type": "color",
      "id": "button_hover_color",
      "label": "Button hover color",
      "default": "#18566c"
    },
    {
      "type": "color",
      "id": "button_hover_text_color",
      "label": "Button hover text color",
      "default": "#fcfcfc"
    },
    {
      "type": "range",
      "id": "button_text_size",
      "min": 12,
      "max": 18,
      "step": 1,
      "unit": "px",
      "label": "Button text size",
      "default": 14
    },
    {
      "type": "range",
      "id": "button_padding_vertical",
      "min": 8,
      "max": 20,
      "step": 2,
      "unit": "px",
      "label": "Button vertical padding",
      "default": 12
    },
    {
      "type": "range",
      "id": "button_padding_horizontal",
      "min": 16,
      "max": 40,
      "step": 4,
      "unit": "px",
      "label": "Button horizontal padding",
      "default": 24
    },
    {
      "type": "header",
      "content": "Style"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "scheme-1"
    }
  ],
  "presets": [
    {
      "name": "Product card"
    }
  ]
}
{% endschema %}