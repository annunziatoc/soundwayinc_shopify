{% doc %}
  @prompt
    Create a testimonials section with two side-by-side testimonials displayed without images, including left and right navigation arrows to click through additional testimonials, no quotes or leading pipe
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-testimonials-container-{{ ai_gen_id }} {
    position: relative;
    padding: {{ block.settings.section_padding }}px 0;
    background-color: {{ block.settings.background_color }};
  }

  .ai-testimonials-wrapper-{{ ai_gen_id }} {
    max-width: {{ block.settings.max_width }}px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .ai-testimonials-header-{{ ai_gen_id }} {
    text-align: {{ block.settings.text_alignment }};
    margin-bottom: 40px;
  }

  .ai-testimonials-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.heading_size }}px;
    color: {{ block.settings.heading_color }};
    margin: 0 0 16px;
    font-weight: 600;
  }

  .ai-testimonials-subtitle-{{ ai_gen_id }} {
    font-size: {{ block.settings.subheading_size }}px;
    color: {{ block.settings.text_color }};
    margin: 0;
    opacity: 0.8;
  }

  .ai-testimonials-slider-{{ ai_gen_id }} {
    position: relative;
    overflow: hidden;
  }

  .ai-testimonials-track-{{ ai_gen_id }} {
    display: flex;
    transition: transform 0.5s ease;
    gap: {{ block.settings.testimonial_gap }}px;
  }

  .ai-testimonial-slide-{{ ai_gen_id }} {
    flex: 0 0 calc(50% - {{ block.settings.testimonial_gap | divided_by: 2 }}px);
    background-color: {{ block.settings.testimonial_bg_color }};
    padding: {{ block.settings.testimonial_padding }}px;
    border-radius: {{ block.settings.border_radius }}px;
    border: {{ block.settings.border_width }}px solid {{ block.settings.border_color }};
    box-shadow: 0 {{ block.settings.shadow_vertical }}px {{ block.settings.shadow_blur }}px rgba(0, 0, 0, {{ block.settings.shadow_opacity | divided_by: 100.0 }});
  }

  .ai-testimonial-content-{{ ai_gen_id }} {
    margin-bottom: 20px;
  }

  .ai-testimonial-quote-{{ ai_gen_id }} {
    font-size: {{ block.settings.quote_size }}px;
    color: {{ block.settings.text_color }};
    line-height: 1.6;
    margin: 0;
    font-style: italic;
  }

  .ai-testimonial-author-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    gap: 4px;
  }

  .ai-testimonial-name-{{ ai_gen_id }} {
    font-size: {{ block.settings.author_size }}px;
    color: {{ block.settings.author_color }};
    font-weight: 600;
    margin: 0;
  }

  .ai-testimonial-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.title_size }}px;
    color: {{ block.settings.text_color }};
    opacity: 0.7;
    margin: 0;
  }

  .ai-testimonial-rating-{{ ai_gen_id }} {
    display: flex;
    gap: 2px;
    margin-top: 8px;
  }

  .ai-testimonial-star-{{ ai_gen_id }} {
    width: {{ block.settings.star_size }}px;
    height: {{ block.settings.star_size }}px;
    color: {{ block.settings.star_color }};
  }

  .ai-testimonials-navigation-{{ ai_gen_id }} {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 20px;
    margin-top: 40px;
  }

  .ai-testimonials-nav-button-{{ ai_gen_id }} {
    width: {{ block.settings.nav_button_size }}px;
    height: {{ block.settings.nav_button_size }}px;
    border-radius: 50%;
    background-color: {{ block.settings.nav_button_bg }};
    border: 2px solid {{ block.settings.nav_button_border }};
    color: {{ block.settings.nav_button_color }};
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.3s ease;
  }

  .ai-testimonials-nav-button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.nav_button_hover_bg }};
    color: {{ block.settings.nav_button_hover_color }};
    transform: scale(1.1);
  }

  .ai-testimonials-nav-button-{{ ai_gen_id }}:disabled {
    opacity: 0.5;
    cursor: not-allowed;
    transform: none;
  }

  .ai-testimonials-nav-button-{{ ai_gen_id }} svg {
    width: calc({{ block.settings.nav_button_size }}px * 0.5);
    height: calc({{ block.settings.nav_button_size }}px * 0.5);
  }

  .ai-testimonials-dots-{{ ai_gen_id }} {
    display: flex;
    gap: 8px;
  }

  .ai-testimonials-dot-{{ ai_gen_id }} {
    width: 12px;
    height: 12px;
    border-radius: 50%;
    background-color: {{ block.settings.dot_color }};
    opacity: 0.3;
    cursor: pointer;
    transition: opacity 0.3s ease;
  }

  .ai-testimonials-dot-{{ ai_gen_id }}.active {
    opacity: 1;
    background-color: {{ block.settings.dot_active_color }};
  }

  @media screen and (max-width: 749px) {
    .ai-testimonial-slide-{{ ai_gen_id }} {
      flex: 0 0 100%;
    }

    .ai-testimonials-header-{{ ai_gen_id }} {
      margin-bottom: 30px;
    }

    .ai-testimonials-navigation-{{ ai_gen_id }} {
      margin-top: 30px;
    }
  }
{% endstyle %}

<testimonials-slider-{{ ai_gen_id }}
  class="ai-testimonials-container-{{ ai_gen_id }}"
  {{ block.shopify_attributes }}
>
  <div class="ai-testimonials-wrapper-{{ ai_gen_id }}">
    {% if block.settings.heading != blank or block.settings.subheading != blank %}
      <div class="ai-testimonials-header-{{ ai_gen_id }}">
        {% if block.settings.heading != blank %}
          <h2 class="ai-testimonials-title-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
        {% endif %}
        {% if block.settings.subheading != blank %}
          <p class="ai-testimonials-subtitle-{{ ai_gen_id }}">{{ block.settings.subheading }}</p>
        {% endif %}
      </div>
    {% endif %}

    <div class="ai-testimonials-slider-{{ ai_gen_id }}">
      <div class="ai-testimonials-track-{{ ai_gen_id }}" data-track>
        {% for i in (1..6) %}
          {% liquid
            assign testimonial_enabled_key = 'testimonial_' | append: i | append: '_enabled'
            assign quote_key = 'testimonial_' | append: i | append: '_quote'
            assign author_key = 'testimonial_' | append: i | append: '_author'
            assign title_key = 'testimonial_' | append: i | append: '_title'
            assign rating_key = 'testimonial_' | append: i | append: '_rating'

            assign testimonial_enabled = block.settings[testimonial_enabled_key]
            assign quote = block.settings[quote_key]
            assign author = block.settings[author_key]
            assign title = block.settings[title_key]
            assign rating = block.settings[rating_key]
          %}

          {% if testimonial_enabled %}
            <div class="ai-testimonial-slide-{{ ai_gen_id }}">
              <div class="ai-testimonial-content-{{ ai_gen_id }}">
                {% if quote != blank %}
                  <blockquote class="ai-testimonial-quote-{{ ai_gen_id }}">
                    {{ quote }}
                  </blockquote>
                {% else %}
                  <blockquote class="ai-testimonial-quote-{{ ai_gen_id }}">
                    Add your testimonial quote here to showcase customer feedback.
                  </blockquote>
                {% endif %}
              </div>

              <div class="ai-testimonial-author-{{ ai_gen_id }}">
                {% if author != blank %}
                  <cite class="ai-testimonial-name-{{ ai_gen_id }}">{{ author }}</cite>
                {% else %}
                  <cite class="ai-testimonial-name-{{ ai_gen_id }}">Customer Name</cite>
                {% endif %}

                {% if title != blank %}
                  <p class="ai-testimonial-title-{{ ai_gen_id }}">{{ title }}</p>
                {% endif %}

                {% if block.settings.show_ratings and rating > 0 %}
                  <div class="ai-testimonial-rating-{{ ai_gen_id }}">
                    {% for star in (1..5) %}
                      <svg
                        class="ai-testimonial-star-{{ ai_gen_id }}"
                        xmlns="http://www.w3.org/2000/svg"
                        viewBox="0 0 24 24"
                        fill="{% if star <= rating %}currentColor{% else %}none{% endif %}"
                        stroke="currentColor"
                        stroke-width="2"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                      >
                        <polygon points="12,2 15.09,8.26 22,9.27 17,14.14 18.18,21.02 12,17.77 5.82,21.02 7,14.14 2,9.27 8.91,8.26"></polygon>
                      </svg>
                    {% endfor %}
                  </div>
                {% endif %}
              </div>
            </div>
          {% endif %}
        {% endfor %}
      </div>
    </div>

    <div class="ai-testimonials-navigation-{{ ai_gen_id }}">
      <button
        class="ai-testimonials-nav-button-{{ ai_gen_id }}"
        data-prev
        aria-label="Previous testimonials"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
        >
          <polyline points="15,18 9,12 15,6"></polyline>
        </svg>
      </button>

      <div class="ai-testimonials-dots-{{ ai_gen_id }}" data-dots></div>

      <button
        class="ai-testimonials-nav-button-{{ ai_gen_id }}"
        data-next
        aria-label="Next testimonials"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
        >
          <polyline points="9,6 15,12 9,18"></polyline>
        </svg>
      </button>
    </div>
  </div>
</testimonials-slider-{{ ai_gen_id }}>

<script>
  (function() {
    class TestimonialsSlider{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.currentIndex = 0;
        this.slidesPerView = 2;
        this.isMobile = window.innerWidth <= 749;
      }

      connectedCallback() {
        this.track = this.querySelector('[data-track]');
        this.slides = this.querySelectorAll('.ai-testimonial-slide-{{ ai_gen_id }}');
        this.prevButton = this.querySelector('[data-prev]');
        this.nextButton = this.querySelector('[data-next]');
        this.dotsContainer = this.querySelector('[data-dots]');

        this.init();
        this.setupEventListeners();
      }

      init() {
        this.updateSlidesPerView();
        this.createDots();
        this.updateSlider();
      }

      updateSlidesPerView() {
        this.isMobile = window.innerWidth <= 749;
        this.slidesPerView = this.isMobile ? 1 : 2;
      }

      createDots() {
        if (!this.dotsContainer) return;
        
        this.dotsContainer.innerHTML = '';
        const totalSlides = this.slides.length;
        const totalPages = Math.ceil(totalSlides / this.slidesPerView);

        for (let i = 0; i < totalPages; i++) {
          const dot = document.createElement('button');
          dot.className = 'ai-testimonials-dot-{{ ai_gen_id }}';
          dot.setAttribute('data-index', i);
          dot.setAttribute('aria-label', `Go to testimonials ${i + 1}`);
          this.dotsContainer.appendChild(dot);
        }
      }

      updateSlider() {
        if (!this.track || this.slides.length === 0) return;

        const totalSlides = this.slides.length;
        const maxIndex = Math.max(0, totalSlides - this.slidesPerView);
        
        this.currentIndex = Math.min(this.currentIndex, maxIndex);

        const slideWidth = this.slides[0].offsetWidth;
        const gap = parseInt(getComputedStyle(this.track).gap) || 0;
        const offset = this.currentIndex * (slideWidth + gap);

        this.track.style.transform = `translateX(-${offset}px)`;

        this.updateButtons();
        this.updateDots();
      }

      updateButtons() {
        if (!this.prevButton || !this.nextButton) return;

        const totalSlides = this.slides.length;
        const maxIndex = Math.max(0, totalSlides - this.slidesPerView);

        this.prevButton.disabled = this.currentIndex === 0;
        this.nextButton.disabled = this.currentIndex >= maxIndex;
      }

      updateDots() {
        const dots = this.dotsContainer.querySelectorAll('.ai-testimonials-dot-{{ ai_gen_id }}');
        const currentPage = Math.floor(this.currentIndex / this.slidesPerView);

        dots.forEach((dot, index) => {
          dot.classList.toggle('active', index === currentPage);
        });
      }

      goToSlide(index) {
        const totalSlides = this.slides.length;
        const maxIndex = Math.max(0, totalSlides - this.slidesPerView);
        
        this.currentIndex = Math.max(0, Math.min(index, maxIndex));
        this.updateSlider();
      }

      nextSlide() {
        this.goToSlide(this.currentIndex + this.slidesPerView);
      }

      prevSlide() {
        this.goToSlide(this.currentIndex - this.slidesPerView);
      }

      setupEventListeners() {
        if (this.prevButton) {
          this.prevButton.addEventListener('click', () => this.prevSlide());
        }

        if (this.nextButton) {
          this.nextButton.addEventListener('click', () => this.nextSlide());
        }

        if (this.dotsContainer) {
          this.dotsContainer.addEventListener('click', (e) => {
            if (e.target.classList.contains('ai-testimonials-dot-{{ ai_gen_id }}')) {
              const index = parseInt(e.target.getAttribute('data-index')) * this.slidesPerView;
              this.goToSlide(index);
            }
          });
        }

        window.addEventListener('resize', () => {
          this.updateSlidesPerView();
          this.createDots();
          this.updateSlider();
        });
      }
    }

    customElements.define('testimonials-slider-{{ ai_gen_id }}', TestimonialsSlider{{ ai_gen_id }});
  })();
</script>

