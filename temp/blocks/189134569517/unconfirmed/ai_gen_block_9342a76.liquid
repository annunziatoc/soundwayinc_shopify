{% doc %}
  @prompt
    remove the price  add a shop button and add a text section under the title that allows for a bulleted list of what they are getting, but do this all on the existing features product section
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-features-product-{{ ai_gen_id }} {
    padding: {{ block.settings.padding_top }}px 0 {{ block.settings.padding_bottom }}px;
  }

  .ai-features-product-container-{{ ai_gen_id }} {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .ai-features-product-grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 60px;
    align-items: center;
  }

  .ai-features-product-image-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
  }

  .ai-features-product-image-{{ ai_gen_id }} {
    width: 100%;
    height: auto;
    border-radius: {{ block.settings.image_border_radius }}px;
    object-fit: cover;
  }

  .ai-features-product-image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    aspect-ratio: 1;
    background-color: #f4f4f4;
    border-radius: {{ block.settings.image_border_radius }}px;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  .ai-features-product-image-placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.3;
  }

  .ai-features-product-empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    font-size: 14px;
    color: #666;
    text-align: center;
    pointer-events: none;
  }

  .ai-features-product-content-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    gap: 20px;
  }

  .ai-features-product-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.title_size }}px;
    font-weight: 600;
    color: {{ block.settings.title_color }};
    margin: 0;
    line-height: 1.2;
  }

  .ai-features-product-features-{{ ai_gen_id }} {
    color: {{ block.settings.text_color }};
    font-size: {{ block.settings.text_size }}px;
    line-height: 1.6;
  }

  .ai-features-product-features-{{ ai_gen_id }} ul {
    margin: 0;
    padding-left: 20px;
  }

  .ai-features-product-features-{{ ai_gen_id }} li {
    margin-bottom: 8px;
  }

  .ai-features-product-description-{{ ai_gen_id }} {
    color: {{ block.settings.text_color }};
    font-size: {{ block.settings.text_size }}px;
    line-height: 1.6;
  }

  .ai-features-product-button-{{ ai_gen_id }} {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 15px 30px;
    background-color: {{ block.settings.button_color }};
    color: {{ block.settings.button_text_color }};
    text-decoration: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    font-size: {{ block.settings.button_text_size }}px;
    font-weight: 600;
    transition: all 0.3s ease;
    border: none;
    cursor: pointer;
    min-width: 160px;
  }

  .ai-features-product-button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_color }};
    color: {{ block.settings.button_hover_text_color }};
    transform: translateY(-2px);
  }

  @media screen and (max-width: 768px) {
    .ai-features-product-grid-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
      gap: 40px;
    }

    .ai-features-product-title-{{ ai_gen_id }} {
      font-size: {{ block.settings.title_size | times: 0.8 }}px;
    }

    .ai-features-product-content-{{ ai_gen_id }} {
      text-align: center;
    }

    .ai-features-product-button-{{ ai_gen_id }} {
      width: 100%;
      max-width: 300px;
      margin: 0 auto;
    }
  }
{% endstyle %}

<div class="ai-features-product-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-features-product-container-{{ ai_gen_id }}">
    <div class="ai-features-product-grid-{{ ai_gen_id }}">
      {% if block.settings.layout == 'image_first' %}
        <div class="ai-features-product-image-wrapper-{{ ai_gen_id }}">
          {% if block.settings.product and block.settings.product.featured_image %}
            <img
              src="{{ block.settings.product.featured_image | image_url: width: 800 }}"
              alt="{{ block.settings.product.featured_image.alt | escape }}"
              class="ai-features-product-image-{{ ai_gen_id }}"
              loading="lazy"
              width="{{ block.settings.product.featured_image.width }}"
              height="{{ block.settings.product.featured_image.height }}"
            >
          {% elsif block.settings.image %}
            <img
              src="{{ block.settings.image | image_url: width: 800 }}"
              alt="{{ block.settings.image.alt | escape }}"
              class="ai-features-product-image-{{ ai_gen_id }}"
              loading="lazy"
              width="{{ block.settings.image.width }}"
              height="{{ block.settings.image.height }}"
            >
          {% else %}
            <div class="ai-features-product-image-placeholder-{{ ai_gen_id }}">
              {{ 'product-1' | placeholder_svg_tag }}
              <div class="ai-features-product-empty-state-{{ ai_gen_id }}">
                Add a product or image
              </div>
            </div>
          {% endif %}
        </div>
      {% endif %}

      <div class="ai-features-product-content-{{ ai_gen_id }}">
        {% if block.settings.title != blank %}
          <h2 class="ai-features-product-title-{{ ai_gen_id }}">
            {{ block.settings.title }}
          </h2>
        {% elsif block.settings.product %}
          <h2 class="ai-features-product-title-{{ ai_gen_id }}">
            {{ block.settings.product.title }}
          </h2>
        {% endif %}

        {% if block.settings.features_text != blank %}
          <div class="ai-features-product-features-{{ ai_gen_id }}">
            {{ block.settings.features_text }}
          </div>
        {% endif %}

        {% if block.settings.description != blank %}
          <div class="ai-features-product-description-{{ ai_gen_id }}">
            {{ block.settings.description }}
          </div>
        {% elsif block.settings.product and block.settings.product.description != blank %}
          <div class="ai-features-product-description-{{ ai_gen_id }}">
            {{ block.settings.product.description | truncate: 200 }}
          </div>
        {% endif %}

        {% if block.settings.button_text != blank %}
          <a
            href="{% if block.settings.button_link != blank %}{{ block.settings.button_link }}{% elsif block.settings.product %}{{ block.settings.product.url }}{% else %}#{% endif %}"
            class="ai-features-product-button-{{ ai_gen_id }}"
          >
            {{ block.settings.button_text }}
          </a>
        {% endif %}
      </div>

      {% if block.settings.layout == 'text_first' %}
        <div class="ai-features-product-image-wrapper-{{ ai_gen_id }}">
          {% if block.settings.product and block.settings.product.featured_image %}
            <img
              src="{{ block.settings.product.featured_image | image_url: width: 800 }}"
              alt="{{ block.settings.product.featured_image.alt | escape }}"
              class="ai-features-product-image-{{ ai_gen_id }}"
              loading="lazy"
              width="{{ block.settings.product.featured_image.width }}"
              height="{{ block.settings.product.featured_image.height }}"
            >
          {% elsif block.settings.image %}
            <img
              src="{{ block.settings.image | image_url: width: 800 }}"
              alt="{{ block.settings.image.alt | escape }}"
              class="ai-features-product-image-{{ ai_gen_id }}"
              loading="lazy"
              width="{{ block.settings.image.width }}"
              height="{{ block.settings.image.height }}"
            >
          {% else %}
            <div class="ai-features-product-image-placeholder-{{ ai_gen_id }}">
              {{ 'product-1' | placeholder_svg_tag }}
              <div class="ai-features-product-empty-state-{{ ai_gen_id }}">
                Add a product or image
              </div>
            </div>
          {% endif %}
        </div>
      {% endif %}
    </div>
  </div>
</div>

