{% doc %}
  @prompt
    Lets generate features products section with three product cards with a shop now button but it's just an image above the button no text and the size of the image is 376 x 470 px but also allow the image click to go to the product
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-featured-products-{{ ai_gen_id }} {
    padding: 40px 20px;
    background-color: {{ block.settings.background_color }};
  }

  .ai-featured-products__container-{{ ai_gen_id }} {
    max-width: 1200px;
    margin: 0 auto;
  }

  .ai-featured-products__heading-{{ ai_gen_id }} {
    text-align: center;
    margin: 0 0 40px;
    font-size: {{ block.settings.heading_size }}px;
    color: {{ block.settings.heading_color }};
  }

  .ai-featured-products__grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: {{ block.settings.grid_gap }}px;
  }

  .ai-featured-products__card-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
  }

  .ai-featured-products__image-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    aspect-ratio: 376 / 470;
    overflow: hidden;
    border-radius: {{ block.settings.image_border_radius }}px;
    margin-bottom: 16px;
  }

  .ai-featured-products__image-link-{{ ai_gen_id }} {
    display: block;
    width: 100%;
    height: 100%;
  }

  .ai-featured-products__image-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .ai-featured-products__image-link-{{ ai_gen_id }}:hover .ai-featured-products__image-{{ ai_gen_id }} {
    transform: scale(1.05);
  }

  .ai-featured-products__placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-featured-products__placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-featured-products__button-{{ ai_gen_id }} {
    display: inline-block;
    width: 100%;
    padding: 14px 24px;
    background-color: {{ block.settings.button_color }};
    color: {{ block.settings.button_text_color }};
    text-align: center;
    text-decoration: none;
    border: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    font-size: 16px;
    cursor: pointer;
    transition: background-color 0.3s ease;
  }

  .ai-featured-products__button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_color }};
  }

  @media screen and (max-width: 989px) {
    .ai-featured-products__grid-{{ ai_gen_id }} {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media screen and (max-width: 749px) {
    .ai-featured-products__grid-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
    }

    .ai-featured-products__heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.8 }}px;
    }
  }
{% endstyle %}

<div class="ai-featured-products-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-featured-products__container-{{ ai_gen_id }}">
    {% if block.settings.heading != blank %}
      <h2 class="ai-featured-products__heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
    {% endif %}

    <div class="ai-featured-products__grid-{{ ai_gen_id }}">
      {% for i in (1..3) %}
        {% liquid
          assign product_key = 'product_' | append: i
          assign product = block.settings[product_key]
        %}

        <div class="ai-featured-products__card-{{ ai_gen_id }}">
          <div class="ai-featured-products__image-wrapper-{{ ai_gen_id }}">
            {% if product != blank %}
              <a href="{{ product.url }}" class="ai-featured-products__image-link-{{ ai_gen_id }}">
                {% if product.featured_image %}
                  <img
                    src="{{ product.featured_image | image_url: width: 752 }}"
                    alt="{{ product.featured_image.alt | escape }}"
                    class="ai-featured-products__image-{{ ai_gen_id }}"
                    loading="lazy"
                    width="376"
                    height="470"
                  >
                {% else %}
                  <div class="ai-featured-products__placeholder-{{ ai_gen_id }}">
                    {{ 'product-1' | placeholder_svg_tag }}
                  </div>
                {% endif %}
              </a>
            {% else %}
              <div class="ai-featured-products__placeholder-{{ ai_gen_id }}">
                {{ 'product-1' | placeholder_svg_tag }}
              </div>
            {% endif %}
          </div>

          {% if product != blank %}
            <a href="{{ product.url }}" class="ai-featured-products__button-{{ ai_gen_id }}">
              {{ block.settings.button_text }}
            </a>
          {% else %}
            <button class="ai-featured-products__button-{{ ai_gen_id }}" disabled>
              {{ block.settings.button_text }}
            </button>
          {% endif %}
        </div>
      {% endfor %}
    </div>
  </div>
</div>

