{% doc %}
  @prompt
    a section where I can put links and a description
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-links-section-{{ ai_gen_id }} {
    padding: {{ block.settings.section_padding_top }}px 0 {{ block.settings.section_padding_bottom }}px;
    background-color: {{ block.settings.background_color }};
  }

  .ai-links-section__container-{{ ai_gen_id }} {
    max-width: {{ block.settings.container_width }}px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .ai-links-section__header-{{ ai_gen_id }} {
    text-align: {{ block.settings.text_alignment }};
    margin-bottom: {{ block.settings.header_spacing }}px;
  }

  .ai-links-section__title-{{ ai_gen_id }} {
    font-size: {{ block.settings.title_size }}px;
    color: {{ block.settings.title_color }};
    margin: 0 0 {{ block.settings.title_bottom_spacing }}px;
    font-weight: 600;
    line-height: 1.2;
  }

  .ai-links-section__description-{{ ai_gen_id }} {
    font-size: {{ block.settings.description_size }}px;
    color: {{ block.settings.description_color }};
    margin: 0;
    line-height: 1.5;
  }

  .ai-links-section__grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax({{ block.settings.min_column_width }}px, 1fr));
    gap: {{ block.settings.grid_gap }}px;
  }

  .ai-links-section__item-{{ ai_gen_id }} {
    background-color: {{ block.settings.item_background_color }};
    border: {{ block.settings.item_border_width }}px solid {{ block.settings.item_border_color }};
    border-radius: {{ block.settings.item_border_radius }}px;
    padding: {{ block.settings.item_padding }}px;
    transition: all 0.3s ease;
    display: block;
    text-decoration: none;
    color: inherit;
  }

  .ai-links-section__item-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.item_hover_background_color }};
    border-color: {{ block.settings.item_hover_border_color }};
    transform: translateY(-{{ block.settings.hover_lift }}px);
    box-shadow: 0 {{ block.settings.hover_shadow_y }}px {{ block.settings.hover_shadow_blur }}px rgba(0, 0, 0, {{ block.settings.hover_shadow_opacity | divided_by: 100.0 }});
  }

  .ai-links-section__item-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.item_title_size }}px;
    color: {{ block.settings.item_title_color }};
    margin: 0 0 {{ block.settings.item_title_spacing }}px;
    font-weight: 600;
    line-height: 1.3;
  }

  .ai-links-section__item-{{ ai_gen_id }}:hover .ai-links-section__item-title-{{ ai_gen_id }} {
    color: {{ block.settings.item_title_hover_color }};
  }

  .ai-links-section__item-description-{{ ai_gen_id }} {
    font-size: {{ block.settings.item_description_size }}px;
    color: {{ block.settings.item_description_color }};
    margin: 0;
    line-height: 1.4;
  }

  .ai-links-section__item-{{ ai_gen_id }}:hover .ai-links-section__item-description-{{ ai_gen_id }} {
    color: {{ block.settings.item_description_hover_color }};
  }

  .ai-links-section__empty-state-{{ ai_gen_id }} {
    text-align: center;
    padding: 60px 20px;
    color: #666;
    font-style: italic;
  }

  @media screen and (max-width: 749px) {
    .ai-links-section__grid-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
    }

    .ai-links-section__title-{{ ai_gen_id }} {
      font-size: {{ block.settings.title_size | times: 0.8 }}px;
    }

    .ai-links-section__item-{{ ai_gen_id }} {
      padding: {{ block.settings.item_padding | times: 0.8 }}px;
    }
  }
{% endstyle %}

<div class="ai-links-section-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-links-section__container-{{ ai_gen_id }}">
    {% if block.settings.title != blank or block.settings.description != blank %}
      <div class="ai-links-section__header-{{ ai_gen_id }}">
        {% if block.settings.title != blank %}
          <h2 class="ai-links-section__title-{{ ai_gen_id }}">{{ block.settings.title }}</h2>
        {% endif %}
        {% if block.settings.description != blank %}
          <div class="ai-links-section__description-{{ ai_gen_id }}">{{ block.settings.description }}</div>
        {% endif %}
      </div>
    {% endif %}

    {% assign has_links = false %}
    {% for i in (1..6) %}
      {% liquid
        assign link_key = 'link_' | append: i | append: '_url'
        assign title_key = 'link_' | append: i | append: '_title'
        assign description_key = 'link_' | append: i | append: '_description'

        assign link_url = block.settings[link_key]
        assign link_title = block.settings[title_key]
        assign link_description = block.settings[description_key]
      %}

      {% if link_title != blank %}
        {% assign has_links = true %}
        {% break %}
      {% endif %}
    {% endfor %}

    {% if has_links %}
      <div class="ai-links-section__grid-{{ ai_gen_id }}">
        {% for i in (1..6) %}
          {% liquid
            assign link_key = 'link_' | append: i | append: '_url'
            assign title_key = 'link_' | append: i | append: '_title'
            assign description_key = 'link_' | append: i | append: '_description'

            assign link_url = block.settings[link_key]
            assign link_title = block.settings[title_key]
            assign link_description = block.settings[description_key]
          %}

            {% if link_title != blank %}
                {% if link_url != blank %}
                    <a href="{{ link_url }}" class="ai-links-section__item-{{ ai_gen_id }}" target="_blank" rel="noopener noreferrer">
                        <h3 class="ai-links-section__item-title-{{ ai_gen_id }}">{{ link_title }}</h3>
                        {% if link_description != blank %}
                            <div class="ai-links-section__item-description-{{ ai_gen_id }}">{{ link_description }}</div>
                        {% endif %}
                    </a>
                {% else %}
                    <div class="ai-links-section__item-{{ ai_gen_id }}">
                        <h3 class="ai-links-section__item-title-{{ ai_gen_id }}">{{ link_title }}</h3>
                        {% if link_description != blank %}
                            <div class="ai-links-section__item-description-{{ ai_gen_id }}">{{ link_description }}</div>
                        {% endif %}
                    </div>
                {% endif %}
            {% endif %}
        {% endfor %}
      </div>
    {% else %}
      <div class="ai-links-section__empty-state-{{ ai_gen_id }}">
        Add your first link to get started
      </div>
    {% endif %}
  </div>
</div>
