{% doc %}
  @prompt
    testimonials section, lets do a simple side by side but without the dumb stars or literal quote marks
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-testimonials-{{ ai_gen_id }} {
    padding: {{ block.settings.section_padding_top }}px 0 {{ block.settings.section_padding_bottom }}px;
  }

  .ai-testimonials-container-{{ ai_gen_id }} {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .ai-testimonials-header-{{ ai_gen_id }} {
    text-align: {{ block.settings.text_alignment }};
    margin-bottom: {{ block.settings.spacing_between_elements }}px;
  }

  .ai-testimonials-title-{{ ai_gen_id }} {
    font-family: {{ settings.type_header_font.family }}, {{ settings.type_header_font.fallback_families }};
    font-weight: {{ settings.type_header_font.weight }};
    font-size: {{ block.settings.heading_size }}px;
    color: {{ block.settings.heading_color }};
    margin: 0 0 16px;
    line-height: 1.2;
  }

  .ai-testimonials-subtitle-{{ ai_gen_id }} {
    font-family: {{ settings.type_body_font.family }}, {{ settings.type_body_font.fallback_families }};
    font-size: {{ block.settings.subheading_size }}px;
    color: {{ block.settings.text_color }};
    margin: 0;
    line-height: 1.4;
  }

  .ai-testimonials-grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat({{ block.settings.columns_desktop }}, 1fr);
    gap: {{ block.settings.grid_gap }}px;
    margin-top: {{ block.settings.spacing_between_elements }}px;
  }

  .ai-testimonial-card-{{ ai_gen_id }} {
    background-color: {{ block.settings.card_background_color }};
    padding: {{ block.settings.card_padding }}px;
    border-radius: {{ block.settings.card_border_radius }}px;
    border: {{ block.settings.card_border_thickness }}px solid {{ block.settings.card_border_color }};
    box-shadow: 0 {{ block.settings.card_shadow_vertical_offset }}px {{ block.settings.card_shadow_blur }}px rgba(0, 0, 0, {{ block.settings.card_shadow_opacity | divided_by: 100.0 }});
    text-align: {{ block.settings.card_text_alignment }};
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .ai-testimonial-card-{{ ai_gen_id }}:hover {
    transform: translateY(-2px);
    box-shadow: 0 {{ block.settings.card_shadow_vertical_offset | plus: 4 }}px {{ block.settings.card_shadow_blur | plus: 5 }}px rgba(0, 0, 0, {{ block.settings.card_shadow_opacity | divided_by: 100.0 | plus: 0.05 }});
  }

  .ai-testimonial-quote-{{ ai_gen_id }} {
    font-family: {{ settings.type_body_font.family }}, {{ settings.type_body_font.fallback_families }};
    font-size: {{ block.settings.quote_size }}px;
    color: {{ block.settings.text_color }};
    line-height: 1.6;
    margin: 0 0 24px;
  }

  .ai-testimonial-author-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    gap: 16px;
    {% if block.settings.card_text_alignment == 'center' %}
      justify-content: center;
    {% elsif block.settings.card_text_alignment == 'right' %}
      justify-content: flex-end;
    {% endif %}
  }

  .ai-testimonial-avatar-{{ ai_gen_id }} {
    width: {{ block.settings.avatar_size }}px;
    height: {{ block.settings.avatar_size }}px;
    border-radius: 50%;
    overflow: hidden;
    flex-shrink: 0;
    background-color: {{ block.settings.card_border_color }};
  }

  .ai-testimonial-avatar-{{ ai_gen_id }} img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-testimonial-avatar-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: {{ block.settings.card_border_color }};
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-testimonial-avatar-placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    color: {{ block.settings.text_color }};
    opacity: 0.5;
  }

  .ai-testimonial-author-info-{{ ai_gen_id }} {
    {% if block.settings.card_text_alignment == 'center' %}
      text-align: center;
    {% elsif block.settings.card_text_alignment == 'right' %}
      text-align: right;
    {% else %}
      text-align: left;
    {% endif %}
  }

  .ai-testimonial-author-name-{{ ai_gen_id }} {
    font-family: {{ settings.type_header_font.family }}, {{ settings.type_header_font.fallback_families }};
    font-weight: {{ settings.type_header_font.weight }};
    font-size: {{ block.settings.author_name_size }}px;
    color: {{ block.settings.heading_color }};
    margin: 0 0 4px;
    line-height: 1.3;
  }

  .ai-testimonial-author-title-{{ ai_gen_id }} {
    font-family: {{ settings.type_body_font.family }}, {{ settings.type_body_font.fallback_families }};
    font-size: {{ block.settings.author_title_size }}px;
    color: {{ block.settings.text_color }};
    margin: 0;
    opacity: 0.8;
    line-height: 1.3;
  }

  @media screen and (max-width: 749px) {
    .ai-testimonials-grid-{{ ai_gen_id }} {
      grid-template-columns: repeat({{ block.settings.columns_mobile }}, 1fr);
      gap: {{ block.settings.grid_gap | times: 0.8 }}px;
    }

    .ai-testimonial-card-{{ ai_gen_id }} {
      padding: {{ block.settings.card_padding | times: 0.8 }}px;
    }

    .ai-testimonials-title-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.8 }}px;
    }

    .ai-testimonial-quote-{{ ai_gen_id }} {
      font-size: {{ block.settings.quote_size | times: 0.9 }}px;
    }
  }
{% endstyle %}

<div class="ai-testimonials-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-testimonials-container-{{ ai_gen_id }}">
    {% if block.settings.heading != blank or block.settings.subheading != blank %}
      <div class="ai-testimonials-header-{{ ai_gen_id }}">
        {% if block.settings.heading != blank %}
          <h2 class="ai-testimonials-title-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
        {% endif %}
        {% if block.settings.subheading != blank %}
          <div class="ai-testimonials-subtitle-{{ ai_gen_id }}">{{ block.settings.subheading }}</div>
        {% endif %}
      </div>
    {% endif %}

    <div class="ai-testimonials-grid-{{ ai_gen_id }}">
      {% for i in (1..4) %}
        {% liquid
          assign testimonial_enabled_key = 'testimonial_' | append: i | append: '_enabled'
          assign quote_key = 'testimonial_' | append: i | append: '_quote'
          assign author_name_key = 'testimonial_' | append: i | append: '_author_name'
          assign author_title_key = 'testimonial_' | append: i | append: '_author_title'
          assign avatar_key = 'testimonial_' | append: i | append: '_avatar'

          assign testimonial_enabled = block.settings[testimonial_enabled_key]
          assign quote = block.settings[quote_key]
          assign author_name = block.settings[author_name_key]
          assign author_title = block.settings[author_title_key]
          assign avatar = block.settings[avatar_key]
        %}

        {% if testimonial_enabled and quote != blank %}
          <div class="ai-testimonial-card-{{ ai_gen_id }}">
            <div class="ai-testimonial-quote-{{ ai_gen_id }}">
              {{ quote }}
            </div>

            {% if author_name != blank or author_title != blank or avatar != blank %}
              <div class="ai-testimonial-author-{{ ai_gen_id }}">
                <div class="ai-testimonial-avatar-{{ ai_gen_id }}">
                  {% if avatar != blank %}
                    <img
                      src="{{ avatar | image_url: width: 100 }}"
                      alt="{{ author_name | escape }}"
                      width="100"
                      height="100"
                      loading="lazy"
                    >
                  {% else %}
                    <div class="ai-testimonial-avatar-placeholder-{{ ai_gen_id }}">
                      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
                        <path d="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z"/>
                      </svg>
                    </div>
                  {% endif %}
                </div>

                <div class="ai-testimonial-author-info-{{ ai_gen_id }}">
                  {% if author_name != blank %}
                    <div class="ai-testimonial-author-name-{{ ai_gen_id }}">{{ author_name }}</div>
                  {% endif %}
                  {% if author_title != blank %}
                    <div class="ai-testimonial-author-title-{{ ai_gen_id }}">{{ author_title }}</div>
                  {% endif %}
                </div>
              </div>
            {% endif %}
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</div>

