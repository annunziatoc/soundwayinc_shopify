{% doc %}
  @prompt
    Create a featured products section with 3 product cards. Each card should have an image at the top, followed by the product name, a description area with bullet points for features/what's included, and a "Shop Now" button at the bottom. No price information should be displayed. The layout should be responsive and visually appealing with proper spacing between cards.
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-featured-products-{{ ai_gen_id }} {
    padding: {{ block.settings.section_padding_top }}px 0 {{ block.settings.section_padding_bottom }}px;
    background-color: {{ block.settings.background_color }};
  }

  .ai-featured-products-container-{{ ai_gen_id }} {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .ai-featured-products-header-{{ ai_gen_id }} {
    text-align: center;
    margin-bottom: 48px;
  }

  .ai-featured-products-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.heading_size }}px;
    color: {{ block.settings.text_color }};
    margin: 0 0 16px;
    font-family: var(--font-heading-family);
    font-weight: var(--font-heading-weight);
    line-height: 1.2;
  }

  .ai-featured-products-subtitle-{{ ai_gen_id }} {
    font-size: {{ block.settings.subtitle_size }}px;
    color: {{ block.settings.text_color }};
    margin: 0;
    opacity: 0.8;
  }

  .ai-featured-products-grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: {{ block.settings.card_spacing }}px;
    margin-top: 40px;
  }

  .ai-featured-product-card-{{ ai_gen_id }} {
    background-color: {{ block.settings.card_background_color }};
    border-radius: {{ block.settings.card_border_radius }}px;
    overflow: hidden;
    box-shadow: 0 4px 12px rgba(16, 57, 72, 0.1);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    display: flex;
    flex-direction: column;
    height: 100%;
  }

  .ai-featured-product-card-{{ ai_gen_id }}:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 24px rgba(16, 57, 72, 0.15);
  }

  .ai-featured-product-image-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    aspect-ratio: 4/3;
    overflow: hidden;
  }

  .ai-featured-product-image-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .ai-featured-product-card-{{ ai_gen_id }}:hover .ai-featured-product-image-{{ ai_gen_id }} {
    transform: scale(1.05);
  }

  .ai-featured-product-image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  .ai-featured-product-image-placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.3;
  }

  .ai-featured-product-empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 16px;
    left: 50%;
    transform: translateX(-50%);
    font-size: 14px;
    color: #666;
    text-align: center;
    pointer-events: none;
  }

  .ai-featured-product-content-{{ ai_gen_id }} {
    padding: 24px;
    flex-grow: 1;
    display: flex;
    flex-direction: column;
  }

  .ai-featured-product-name-{{ ai_gen_id }} {
    font-size: {{ block.settings.product_title_size }}px;
    color: {{ block.settings.card_text_color }};
    margin: 0 0 16px;
    font-family: var(--font-heading-family);
    font-weight: var(--font-heading-weight);
    line-height: 1.3;
  }

  .ai-featured-product-description-{{ ai_gen_id }} {
    flex-grow: 1;
    margin-bottom: 24px;
  }

  .ai-featured-product-description-{{ ai_gen_id }} ul {
    margin: 0;
    padding: 0;
    list-style: none;
  }

  .ai-featured-product-description-{{ ai_gen_id }} li {
    position: relative;
    padding-left: 20px;
    margin-bottom: 8px;
    font-size: {{ block.settings.description_size }}px;
    color: {{ block.settings.card_text_color }};
    line-height: 1.5;
  }

  .ai-featured-product-description-{{ ai_gen_id }} li:before {
    content: "â€¢";
    position: absolute;
    left: 0;
    color: {{ block.settings.bullet_color }};
    font-weight: bold;
  }

  .ai-featured-product-button-{{ ai_gen_id }} {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 12px 24px;
    background-color: {{ block.settings.button_color }};
    color: {{ block.settings.button_text_color }};
    text-decoration: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    font-size: {{ block.settings.button_text_size }}px;
    font-weight: 600;
    transition: all 0.3s ease;
    border: none;
    cursor: pointer;
    text-align: center;
    min-height: 48px;
  }

  .ai-featured-product-button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_color }};
    color: {{ block.settings.button_hover_text_color }};
    transform: translateY(-1px);
  }

  .ai-featured-product-empty-content-{{ ai_gen_id }} {
    text-align: center;
    color: #999;
    font-style: italic;
    padding: 40px 20px;
  }

  @media screen and (max-width: 768px) {
    .ai-featured-products-grid-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
      gap: 24px;
    }

    .ai-featured-products-title-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.8 }}px;
    }

    .ai-featured-product-content-{{ ai_gen_id }} {
      padding: 20px;
    }

    .ai-featured-product-name-{{ ai_gen_id }} {
      font-size: {{ block.settings.product_title_size | times: 0.9 }}px;
    }
  }

  @media screen and (max-width: 480px) {
    .ai-featured-products-container-{{ ai_gen_id }} {
      padding: 0 16px;
    }

    .ai-featured-product-content-{{ ai_gen_id }} {
      padding: 16px;
    }
  }
{% endstyle %}

<div class="ai-featured-products-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-featured-products-container-{{ ai_gen_id }}">
    {% if block.settings.heading != blank or block.settings.subtitle != blank %}
      <div class="ai-featured-products-header-{{ ai_gen_id }}">
        {% if block.settings.heading != blank %}
          <h2 class="ai-featured-products-title-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
        {% endif %}
        {% if block.settings.subtitle != blank %}
          <p class="ai-featured-products-subtitle-{{ ai_gen_id }}">{{ block.settings.subtitle }}</p>
        {% endif %}
      </div>
    {% endif %}

    <div class="ai-featured-products-grid-{{ ai_gen_id }}">
      {% for i in (1..3) %}
        {% liquid
          assign product_key = 'product_' | append: i
          assign product = block.settings[product_key]
          assign description_key = 'product_' | append: i | append: '_description'
          assign description = block.settings[description_key]
        %}

        <div class="ai-featured-product-card-{{ ai_gen_id }}">
          <div class="ai-featured-product-image-wrapper-{{ ai_gen_id }}">
            {% if product != blank and product.featured_image %}
              <img
                src="{{ product.featured_image | image_url: width: 600 }}"
                alt="{{ product.featured_image.alt | escape }}"
                class="ai-featured-product-image-{{ ai_gen_id }}"
                loading="lazy"
                width="600"
                height="450"
              >
            {% else %}
              <div class="ai-featured-product-image-placeholder-{{ ai_gen_id }}">
                {{ 'product-1' | placeholder_svg_tag }}
                {% if product == blank %}
                  <div class="ai-featured-product-empty-state-{{ ai_gen_id }}">
                    Add a product for card {{ i }}
                  </div>
                {% endif %}
              </div>
            {% endif %}
          </div>

          <div class="ai-featured-product-content-{{ ai_gen_id }}">
            {% if product != blank %}
              <h3 class="ai-featured-product-name-{{ ai_gen_id }}">{{ product.title }}</h3>
              
              {% if description != blank %}
                <div class="ai-featured-product-description-{{ ai_gen_id }}">
                  {{ description }}
                </div>
              {% else %}
                <div class="ai-featured-product-description-{{ ai_gen_id }}">
                  <ul>
                    <li>Add product features in the block settings</li>
                    <li>Customize the description for this product</li>
                    <li>Highlight key benefits and what's included</li>
                  </ul>
                </div>
              {% endif %}

              <a
                href="{{ product.url }}"
                class="ai-featured-product-button-{{ ai_gen_id }}"
              >
                {{ block.settings.button_text }}
              </a>
            {% else %}
              <div class="ai-featured-product-empty-content-{{ ai_gen_id }}">
                <h3 class="ai-featured-product-name-{{ ai_gen_id }}">Product {{ i }}</h3>
                <div class="ai-featured-product-description-{{ ai_gen_id }}">
                  <ul>
                    <li>Select a product to display</li>
                    <li>Add custom description with features</li>
                    <li>Customize button text and styling</li>
                  </ul>
                </div>
                <div class="ai-featured-product-button-{{ ai_gen_id }}" style="pointer-events: none; opacity: 0.5;">
                  {{ block.settings.button_text }}
                </div>
              </div>
            {% endif %}
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</div>

